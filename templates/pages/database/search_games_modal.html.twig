<div class="modal fade" id="searchGamesModal" tabindex="-1" aria-labelledby="searchGamesModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="searchGamesModalLabel">{{ 'Search Games'|trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="alert alert-light d-flex align-items-center" role="alert">
          {% include 'svg/info-circle-fill.svg' %}
          <div>
            {{ 'Click on the Search button, and find up to 25 random games matching the search criteria'|trans }}.
          </div>
        </div>
        <form>
          <div class="row">
            <div class="col-md-4 mb-3">
              <input list="eventAutocompleteList" name="Event" class="form-control" placeholder="{{ 'Event'|trans }}">
              <datalist id="eventAutocompleteList"></datalist>
            </div>
            <div class="col-md-4 mb-3">
              <input type="number" name="Date" class="form-control" placeholder="{{ 'Year'|trans }}">
            </div>
            <div class="col-md-4 mb-3">
              <input type="text" name="ECO" placeholder="{{ 'ECO Code'|trans }}" class="form-control">
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 mb-3">
              <input list="whiteAutocompleteList" name="White" class="form-control" placeholder="{{ 'White'|trans }}">
              <datalist id="whiteAutocompleteList"></datalist>
            </div>
            <div class="col-md-4 mb-3">
              <input list="blackAutocompleteList" name="Black" class="form-control" placeholder="{{ 'Black'|trans }}">
              <datalist id="blackAutocompleteList"></datalist>
            </div>
            <div class="col-md-4 mb-3">
              <select name="Result" class="form-select" aria-label="Result" required>
                <option value="">{{ 'Result'|trans }}</option>
                <option value="1-0">1-0</option>
                <option value="1/2-1/2">1/2-1/2</option>
                <option value="0-1">0-1</option>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-3">
              <input type="text" name="movetext" placeholder="{{ 'SAN Movetext'|trans }}" class="form-control">
            </div>
          </div>
          <div>
            <button type="submit" class="autocomplete btn btn-primary">{{ 'Search'|trans }}</button>
            <button type="button" class="autocomplete btn btn-primary d-none" disabled>
              <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
              <span class="sr-only">{{ 'Loading'|trans }}...</span>
            </button>
          </div>
          <div class="table-responsive">
            <table class="table table-light table-hover">
              <tbody></tbody>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
