<form id="mostPlayedForm" class="p-3 bg-light">
  <div class="row">
    <div class="col-md-12 mb-3">
      <input list="whiteAutocompleteList" name="White" class="form-control" placeholder="{{ 'White'|trans }}">
      <datalist id="whiteAutocompleteList"></datalist>
    </div>
    <div class="col-md-12 mb-3">
      <input list="blackAutocompleteList" name="Black" class="form-control" placeholder="{{ 'Black'|trans }}">
      <datalist id="blackAutocompleteList"></datalist>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <input list="eventAutocompleteList" name="Event" class="form-control" placeholder="{{ 'Event'|trans }}">
      <datalist id="eventAutocompleteList"></datalist>
    </div>
    <div class="col-md-6 mb-3">
      <select name="Result" class="form-select" aria-label="Result" required>
        <option value="">{{ 'Result'|trans }}</option>
        <option value="1-0">1-0</option>
        <option value="1/2-1/2">1/2-1/2</option>
        <option value="0-1">0-1</option>
      </select>
    </div>
    <div class="col-md-12">
      <button type="submit" class="autocomplete btn btn-primary w-100">{{ 'Search'|trans }}</button>
      <button type="button" class="autocomplete btn btn-primary w-100 d-none" disabled>
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        <span class="sr-only">{{ 'Loading'|trans }}...</span>
      </button>
    </div>
  </div>
  <div id="playerStatsChart" class="row"></div>
</form>
