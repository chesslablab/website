{% extends 'layouts/default.html.twig' %}

{% block main %}
  <div class="the-page">
    <form
      id="signInForm"
      data-totp_auth_signout="{{ path('totp_auth_signout') }}"
      data-pages_play_online="{{ path('pages_play_online') }}"
    >
      <div>
        <div class="mb-3">
          <label class="form-label">{{ 'Username'|trans }}</label>
          <input type="text" name="username" autocomplete="username" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">{{ 'Password'|trans }}</label>
          <input type="password" name="password" minlength="9" maxlength="9" autocomplete="current-password" class="form-control" required>
        </div>
        <div class="mt-4">
          <button type="submit" class="btn btn-primary">{{ 'Sign In'|trans }}</button>
          <a class="btn btn-secondary" href="{{ path('pages_signin_register') }}">{{ 'Register Now'|trans }}</a>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
