<div class="modal" id="playComputerModal" tabindex="-1" aria-labelledby="playComputerModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="playComputerModalLabel">{{ 'Play Computer'|trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3 text-center">
            <label class="form-label">{{ 'Difficulty level'|trans }}</label>
            <input type="range" class="form-range" name="level" min="0" max="3" step="1">
          </div>
          <div class="mb-3 d-flex justify-content-center">
            <div>
              <input type="radio" id="playComputerModalRadioWhite" name="color" value="w">
              <label for="playComputerModalRadioWhite"><img src="{{ asset('img/wKing.png') }}" alt="White"></label>
            </div>
            <div>
              <input type="radio" id="playComputerModalRadioRandom" name="color" value="{{ random(['w', 'b']) }}" checked>
              <label for="playComputerModalRadioRandom"><img src="{{ asset('img/wbKing.png') }}" alt="Random"></label>
            </div>
            <div>
              <input type="radio" id="playComputerModalRadioBlack" name="color" value="b">
              <label for="playComputerModalRadioBlack"><img src="{{ asset('img/bKing.png') }}" alt="Black"></label>
            </div>
          </div>
          <div class="mb-3">
            <input type="text" name="fen" placeholder="{{ 'FEN String'|trans }}" class="form-control">
          </div>
          <div>
            <button type="submit" class="btn btn-primary w-100">{{ 'Accept'|trans }}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
